<div class="container bg">
    <div class="row header text-center">
        <div class="center col-sm-12">
            <img class="img-responsive icon" src="/public/assets/img/stackableBurger.png"  alt="Eat-D-Burger" width="200px">
            <h1>Eat-D-Burger!</h1>
        </div>
    </div>

    <br>

    <div class="newBurger text-center">
        <input type="text" class="form-control" id="burgerName" placeholder="I would like a ..">

        <br>

        <button id="submit">
            Add-A-Burger!
        </button>
    </div>

    <br>

    <div class="row">
       
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" id="notDevoured">
            <h2>UNDEVOURED Burgers</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{this.burger_name}}
                    <button class="btnDevour" data-id={{this.id}} data-newDevour={{this.devoured}}>
                        Devour it!
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>

        </div>

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" id="devoured">
            <h2>DEVOURED Burgers</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>

        </div>

    </div>

</div>